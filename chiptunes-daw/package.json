{
  "name": "chiptunes-daw",
  "version": "0.0.1",
  "description": "A web DAW to compose chiptunes music",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "postbuild": "next-sitemap",
    "lint": "next lint",
    "predeploy": "rm -rf out",
    "deploy": "yarn build && yarn export",
    "postdeploy": "firebase deploy",
    "start": "next start",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "fast-glob": "^3.2.11",
    "firebase": "^7.6.1",
    "framer-motion": "^6.2.3",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-optipng": "^8.0.0",
    "nes.css": "^2.3.0",
    "next": "^12.0.9",
    "next-optimized-images": "^2.6.2",
    "prettier": "^2.5.1",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "reactdom": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^7.31.0",
    "eslint-config-next": "^12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "4",
    "lint-staged": "^12.3.2",
    "next-sitemap": "^2.1.2",
    "typescript": "^4.5.5"
  }
}